<article class="random-beer"> 
    <div>
        <img src="{{this.image_url}}" alt="Beer image">
    </div>
    <div class="beer-info">
        <h2>{{this.name}}</h2>
        <h3>{{this.tagline}}</h3>
        <p>{{this.description}}</p>

        <h4>Food pairing</h4>
        <ul>
            {{#each this.food_pairing}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p><strong>Brewer tips: </strong>{{this.brewers_tips}}</p>
    </div>
</article>